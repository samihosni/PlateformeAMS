{% extends 'template.html.twig' %}

{% block title %}Module{% endblock %}

{% block body %}
    <h1>Module</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Num</th>
                <td>{{ module.id }}</td>

            </tr>
            <tr>
                <th>Nom du module</th>
                <td>{{ module.nomModule }}</td>
            </tr>
            <tr>   <th>Cours</th>
                <td>{% for c in module.cours %} {{ c }} {% endfor %}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_module_index') }}"><button>Retour</button></a>

    <a href="{{ path('app_module_edit', {'id': module.id}) }}"><button>Modifier</button></a>

    {{ include('module/_delete_form.html.twig') }}
{% endblock %}
