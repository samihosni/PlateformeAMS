{% extends 'template.html.twig' %}

{% block title %}Cours{% endblock %}

{% block body %}
    <h1>Cours</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Num</th>
                <td>{{ cour.id }}</td>
            </tr>
            <tr>
                <th>Nom du cours</th>
                <td>{{ cour.nomCours }}</td>
            </tr>
            <tr>
                <th>Volume horaire</th>
                <td>{{ cour.volumeHoraire }}</td>
            </tr>
            <tr>
                <th>Coefficient</th>
                <td>{{ cour.coefficient }}</td>
            </tr>
            <tr>
                <th>Document PDF</th>
                <td><a href="{{ asset("/uploads/user/"~ cour.photo) }}">Télécharger</a></td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_cours_index') }}"><button>Retour</button></a>
    <br>

    <a href="{{ path('app_cours_edit', {'id': cour.id}) }}"><button>Modifier</button></a>
    <br>
    {{ include('cours/_delete_form.html.twig') }}
{% endblock %}
